{
  "$schema": "https://vega.github.io/schema/vega/v5.json",
  "description": "A basic error bar visualization example.",
  "width": 600,
  "height": 400,
  "padding": 2,

  "config": {
    "axisBand": {
      "bandPosition": 1,
      "tickExtra": true,
      "tickOffset": 0
    }
  },

  "signals": [
    {
      "name": "Group", "value": "Feynman",
      "bind": {"input": "select", "options": [
        "Feynman",
        "Strogatz"
      ]}
    },
    {
      "name": "Noise", "value": 0,
      "bind": {"input": "select", "options": [
        0,
        0.001,
        0.010
      ]}
    },
    {
      "name": "agg", "value": "Mean",
      "bind": {"input": "select", "options": [
        "Mean",
        "Median"
      ]}
    },
    {
      "name": "midlook",
      "value": {
        "Mean": "mean",
        "Median": "median"       
      }
    },
    {
      "name": "midMeasure",
      "update": "midlook[agg]"
    },
    {
      "name": "errorMeasure", "value": "Standard Error",
      "bind": {"input": "select", "options": [
        "Interquartile Range",
        "Standard Error",
        "Standard Deviation"
      ]}
    },
    {
      "name": "lookup",
      "value": {
        "Interquartile Range": "iqr",
        "Standard Deviation": "stdev",
        "Standard Error": "stderr"        
      }
    },
    {
      "name": "measure",
      "update": "lookup[errorMeasure]"
    }    
  ],

  "data": [
    {
      "name": "all",
      "url": "https://folivetti.github.io/regression-benchmark/csv/groundtruth.csv",
      "format": {"type": "csv", "parse": "auto"}
    },
    {
      "name": "summary",
      "source": "all",
      "transform": [    
        {
          "type": "filter",
          "expr": "(datum.data_group == Group) && (datum.target_noise == Noise)"
        },
        {
          "type": "aggregate",
          "groupby": ["algorithm"],
          "fields": ["accuracy_solution", "accuracy_solution","accuracy_solution", "accuracy_solution", "accuracy_solution", "accuracy_solution", "accuracy_solution", "accuracy_solution"],
          "ops": ["mean", "median", "stdev", "stderr", "ci0", "ci1", "q1", "q3"],
          "as": ["mean", "median", "stdev", "stderr", "ci0", "ci1", "iqr0", "iqr1"]
        },
        {
          "type": "formula", "as": "stdev0",
          "expr": "datum[midMeasure] - datum.stdev"
        },
        {
          "type": "formula", "as": "stdev1",
          "expr": "datum[midMeasure] + datum.stdev"
        },
        {
          "type": "formula", "as": "stderr0",
          "expr": "datum[midMeasure] - datum.stderr"
        },
        {
          "type": "formula", "as": "stderr1",
          "expr": "datum[midMeasure] + datum.stderr"
        },
        {
          "type": "formula", "as": "order",
          "expr": "datum[midMeasure]"
        },
        {
          "type": "formula", "as": "cl",
          "expr": "min(0,datum[midMeasure])"
        }
      ]
    }
  ],

  "scales": [
    {
      "name": "yscale",
      "type": "band",
      "range": "height",
      "domain": {
        "data": "summary",
        "field": "algorithm",
        "sort": {"op": "max", "field": "order", "order": "descending"}
      }
    },
    {
      "name": "xscale",
      "type": "linear",
      "range": "width", "round": true,
      "domain": [-0.25, 1.0],
      "zero": false, "nice": false
    },
    {
      "name": "color",
      "type": "linear",
      "domain": {"data": "summary", "field": "order"},
      "range": {"scheme": "reds"}
    }
   ],

  "marks": [
    {
      "type": "rect",
      "from": {"data": "summary"},
      "encode": {
        "enter": {
          "height": {"value": 2}
        },
        "update": {
          "fill": {"scale": "color", "field": "order"},
          "y": {"scale": "yscale", "field": "algorithm", "band": 0.5},
          "x": {"scale": "xscale", "signal": "datum[measure+'0']"},
          "x2": {"scale": "xscale", "signal": "datum[measure+'1']"},
          "tooltip": {"signal": "{'Algorithm': datum.algorithm, 'Accuracy' : (round(10000*datum[midMeasure])/10000)}", "type": "quantitative"}
        }
      }
    },
    {
      "type": "symbol",
      "from": {"data": "summary"},
      "encode": {
        "enter": {
          "size": {"value": 80}
        },
        "update": {
          "fill": {"scale": "color", "field": "order"},
          "x": {"scale": "xscale", "signal": "datum[midMeasure]"},
          "y": {"scale": "yscale", "field": "algorithm", "band": 0.5},
          "tooltip": {"signal": "{'Algorithm': datum.algorithm, 'Accuracy' : (round(10000*datum[midMeasure])/10000)}", "type": "quantitative"}
        }
      }
    }
  ],
  "axes": [
    {"orient": "bottom", "scale": "xscale", "zindex": 1, "title": "Accuracy Solution"},
    {"orient": "left", "scale": "yscale", "grid":true, "tickCount": 5, "zindex": 1}
  ]
}
